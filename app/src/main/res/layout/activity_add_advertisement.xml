<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1d"
    tools:context=".ui.AddAdvertisementActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:text="Post\nAdvertisement"
                android:textColor="#46a29f"
                android:textSize="48dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="Title of the Advertisement"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/newadv_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="#46a29f"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/newadv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:ems="10"
                android:fontFamily="@font/lato"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:lines="5"
                android:textColor="#46a29f"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:fontFamily="@font/lato_bold"
                android:text="Starting Price"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/newadv_price"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="#46a29f"
                android:textSize="16dp"></EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:fontFamily="@font/lato_bold"
                android:text="Upload Image"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/newadv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:minHeight="100dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:fontFamily="@font/lato_bold"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="16dp" />
            <Spinner
                android:id="@+id/advcategory_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:fontFamily="@font/lato"
                android:gravity="center_vertical"
                android:textColor="#46a29f"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/adv_add"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="#46a29f"
                android:elevation="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="Post Advertisement"
                android:textColor="@color/black"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>