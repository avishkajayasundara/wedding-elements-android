<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/background_dark"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"

        >

        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/ln_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <RatingBar
                android:id="@+id/adv_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                >
            </RatingBar>
            <TextView
                android:id="@+id/adv_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9.5"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/adv_image"
                android:gravity="center_horizontal"
                />


        </LinearLayout>



        <ImageView
            android:layout_below="@+id/ln_lay"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/adv_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/adv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adv_image"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:text="Product Description"
            android:textColor="@android:color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adv_price"
            android:text="Product Quantity"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:layout_below="@+id/adv_title"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"

            />

        <Button
            android:id="@+id/adv_viewmore"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@id/adv_price"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttons"
            android:elevation="10dp"
            android:gravity="center"
            android:text="View More"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"></Button>

    </RelativeLayout>
</androidx.cardview.widget.CardView>