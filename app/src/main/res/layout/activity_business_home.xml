<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1d"
    tools:context=".ui.BusinessHomeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="425dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/profb_name_top"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginHorizontal="30dp"
                    android:fontFamily="@font/lato_bold"
                    android:gravity="center_vertical"
                    android:text="My\nProfile"
                    android:textColor="#46a29f"
                    android:textSize="48dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="Name of Business"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/profb_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="#46a29f"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/profb_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:ems="10"
                android:fontFamily="@font/lato"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:lines="5"
                android:textColor="#46a29f"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:enabled="false"
                android:fontFamily="@font/lato_bold"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/profb_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:enabled="false"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="#46a29f"
                android:textSize="16dp"></EditText>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="Contact Number"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/profb_contact"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="#46a29f"
                android:textSize="16dp"></EditText>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="Address"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/profb_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:inputType="textMultiLine"
                android:paddingStart="10dp"
                android:textColor="#46a29f"
                android:textSize="16dp"></EditText>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="Category"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/profb_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:enabled="false"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="#46a29f"
                android:textSize="16dp"></EditText>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_bold"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/profb_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="#1F2833"
                android:elevation="5dp"
                android:enabled="false"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:paddingStart="10dp"
                android:text="**********"
                android:textColor="#46a29f"
                android:textSize="16dp"></EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/profb_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="#46a29f"
                android:elevation="5dp"
                android:fontFamily="@font/lato_bold"
                android:text="Update"
                android:textColor="@color/black"></androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center_vertical"
                android:text="My\nAdvertisements"
                android:textColor="#46a29f"
                android:textSize="48dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/business_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="281dp"
        android:layout_height="359dp"
        app:fab_addButtonColorNormal="@color/white"
        app:fab_addButtonPlusIconColor="@color/black"
        app:fab_labelStyle="@style/customFab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/busfloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_icon="@drawable/ic_baseline_account_circle_24"
            app:fab_title="Post Advertisement" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/bus_fab_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/colorPrimary"
            app:fab_icon="@drawable/ic_baseline_account_circle_24"
            app:fab_title="Logout" />


    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</androidx.constraintlayout.widget.ConstraintLayout>